@model CommonLibrary.ViewModels.BaseViewModel


<h1>Login</h1>

<h4>Enter a username and password.</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Users" asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.User.UserName" class="control-label"></label>
                <input asp-for="@Model.User.UserName" class="form-control" />
                <span asp-validation-for="@Model.User.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.User.Password" class="control-label"></label>
                <input asp-for="@Model.User.Password" class="form-control" type="password"/>
                <span asp-validation-for="@Model.User.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
            <div>
                <b> @ViewBag.msg</b>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="Index">Back to homepage.</a>
</div>
