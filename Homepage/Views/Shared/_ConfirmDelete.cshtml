@model CommonLibrary.League

@{
    var divId = "divdel " + Model.LeagueId.ToString();
    var confDel = "confDel " + Model.LeagueId.ToString();
}
<div style="display:none" id="@divId">
    <div class="row">
        <div class="col-md-4">
            <div style="width:1300%">
                <b style="width:1000%">Delete: @Model.LeagueName?</b>
            </div>
            <form asp-action="Delete" asp-controller="Leagues" asp-area="">
                <input type="hidden" value="@Model.LeagueId" name="id" />
                <input type="submit" value="Yes" class="btn btn-danger btn-sm" />
            </form>
        </div>
    </div>
</div>
