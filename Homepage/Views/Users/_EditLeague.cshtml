@model CommonLibrary.League

<hr />
@{
    var divId = "dived" + Model.LeagueId.ToString();
}
<div style="float:left; display:none" id="@divId">
    <b>Edit League</b>
    <div class="row">
        <div class="col-md-4">
            <form asp-area="" asp-controller="Leagues" asp-action="EditLeague">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group" style="display:none">
                    <input asp-for="LeagueId" class="form-control" />
                </div>
                <div class="form-group" style="display:none">
                    <input asp-for="LeagueOwner" class="form-control" />
                </div>
                <div class="form-group" style="display:none">
                    <input asp-for="LeagueOwnerId" class="form-control" />
                </div>
                <div class="form-group" style="display:none">
                    <input asp-for="LeagueMembers" class="form-control" />
                </div>
                <div class="form-group" style="width:1300%">
                    <label asp-for="LeagueName" class="control-label"></label>
                    <input asp-for="LeagueName" class="form-control" />
                    <span asp-validation-for="LeagueName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
