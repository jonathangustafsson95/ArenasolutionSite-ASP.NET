@model CommonLibrary.ViewModels.TournamentViewModel
@{
    ViewData["Title"] = "OnClickEdit";
}

<h1>Edit Tournament</h1>

@Html.AntiForgeryToken()
<form asp-action="EditTournament" , new { enctype="multipart/form-data" }>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="@Model.tournament.TournamentName" class="control-label"></label>
        <input asp-for="@Model.tournament.TournamentName" class="form-control" />
        <span asp-validation-for="@Model.tournament.TournamentName" class="text-danger"></span>
    </div>
    <div id="basic-select">
        <label asp-for="@Model.tournament.TournamentStyle" class="control-label"></label>
        <br />
        <select asp-for="@Model.tournament.TournamentStyle" id="TournamentStyle">
            <option asp-for="@Model.tournament.TournamentStyle" value="KnockOut">Knock-out</option>
            <option asp-for="@Model.tournament.TournamentStyle" value="RoundRobin">Round Robin</option>
        </select>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="@Model.tournament.MaxPlayer" class="control-label"></label>
        <input asp-for="@Model.tournament.MaxPlayer" class="form-control" />
        <span asp-validation-for="@Model.tournament.MaxPlayer" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input asp-for="@Model.tournament.LeagueId" type="hidden" class="form-control" value="@Model.tournament.LeagueId" />
    </div>
    <div class="form-group">
        <input asp-for="@Model.tournament.TournamentId" type="hidden" value="@Model.tournament.TournamentId" />
    </div>
    <div class="form-group">
        <input asp-for="@Model.tournament.MaxPlayer" type="hidden" value="@Model.tournament.MaxPlayer" />
    </div>
    <div class="form-group">
        <input asp-for="@Model.tournament.CurrentPlayers" type="hidden" value="@Model.tournament.CurrentPlayers" />
    </div>
    <br />
    <div class="form-group">
        <input type="submit" value="Update" class="btn btn-primary" />
    </div>
</form>

<form asp-action="DeleteTournament">
    <div class="form-group">
        <input asp-for="@Model.tournament.TournamentId" type="hidden" value="@Model.tournament.TournamentId" name="TournamentId" id="TournamentId" />
    </div>
    <div class="form-group">
        <input type="submit" value="Delete Tournament" class="btn btn-primary" />
    </div>
</form>
